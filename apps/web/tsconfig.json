{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Remix",
  "include": ["remix.env.d.ts", "**/*.ts", "**/*.tsx"],
  "extends": "tsconfig/base.json",
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "isolatedModules": true,
    "jsx": "react-jsx",
    "lib": ["DOM", "DOM.Iterable", "ES2019"],
    "moduleResolution": "node",
    "noEmit": true,
    "paths": {
      "~/*": ["./app/*"]
    },
    "resolveJsonModule": true,
    "strict": true,
    "target": "ES2019"
  }
}
