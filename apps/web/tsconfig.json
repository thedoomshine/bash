{
  "display": "Next App",
  "extends": "tsconfig-diary/next.json",
  "compilerOptions": {
    "paths": {
      "~/*": ["./src/*"]
    },
    "lib": ["dom", "dom.iterable", "esnext"]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "node_modules/**/*.d.ts",
    "@diaryco/style-engine",
    "panda.config.ts"
  ],
  "exclude": ["node_modules", "!node_modules/@types/**/*.d.ts"]
}
