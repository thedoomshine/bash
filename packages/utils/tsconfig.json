{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Utils",
  "extends": "tsconfig/base.json",
  "include": ["src/**/*.ts", "node_modules/@types/**/*.d.ts"],
  "exclude": ["dist", "node_modules", "!node_modules/@types/**/*.d.ts"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    },
    "lib": ["ESNext"],
    "target": "ES2021"
  }
}
