{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Design System",
  "extends": "tsconfig-diary/react-library.json",
  "include": [
    "src/**/*.ts",
    "src/**/*.tx",
    "src/**/*.d.ts",
    "node_modules/**/*.d.ts",
    "panda.config.ts"
  ],
  "exclude": ["dist", "node_modules", "!node_modules/**/*.d.ts"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    },
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "target": "ES2021"
  }
}
