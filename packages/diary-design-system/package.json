{
  "name": "@diaryco/design-system",
  "version": "0.0.2",
  "private": true,
  "license": "MIT",
  "sideEffects": false,
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "publishConfig": {
    "directory": "dist",
    "access": "public"
  },
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts --external react",
    "clean": "rm -rf .turbo && rm -rf tsconfig.tsbuildinfo && rm -rf node_modules && rm -rf dist",
    "dev": "tsup src/index.ts --format esm,cjs --watch --dts --external react",
    "prettier": "prettier \"**/*.{ts,tsx,cjs,js,jsx,json}\" --write",
    "eslint": "eslint --ext \"**/*.{ts,tsx,cjs,js,jsx}\" --fix",
    "stylelint": "stylelint \"**/*.{tsx,jsx}\" --fix",
    "typecheck": "tsc"
  },
  "dependencies": {
    "tsup": "^6.7.0"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "styled-components": "^6.0.0-rc.3",
    "stylis": "^4.2.0"
  },
  "devDependencies": {
    "@radix-ui/react-avatar": "^1.0.2",
    "@radix-ui/react-checkbox": "^1.0.4",
    "@radix-ui/react-hover-card": "^1.0.6",
    "@radix-ui/react-popover": "^1.0.5",
    "@radix-ui/react-scroll-area": "^1.0.4",
    "@radix-ui/react-select": "^1.2.2",
    "@radix-ui/react-switch": "^1.0.3",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-toggle": "^1.0.3",
    "@radix-ui/react-toggle-group": "^1.0.4",
    "@radix-ui/react-toolbar": "^1.0.4",
    "@radix-ui/react-tooltip": "^1.0.5",
    "@types/node": "^20.2.5",
    "@types/react": "^18.2.9",
    "@types/react-datepicker": "^4.11.2",
    "@types/react-dom": "^18.2.4",
    "@types/styled-components": "^5.1.26",
    "autoprefixer": "^10.4.14",
    "browserslist": "^4.21.7",
    "classnames": "^2.3.2",
    "css-has-pseudo": "^5.0.2",
    "date-fns": "^2.30.0",
    "date-fns-tz": "^2.0.0",
    "diary-utils": "workspace:*",
    "eslint-config-diary": "workspace:*",
    "polished": "^4.2.2",
    "postcss": "^8.4.24",
    "prettier-config-diary": "workspace:*",
    "react-datepicker": "^4.12.0",
    "react-imask": "^6.6.1",
    "react-markdown": "^8.0.7",
    "remark-breaks": "^3.0.3",
    "remark-emoji": "^3.1.1",
    "remark-gfm": "^3.0.1",
    "stylelint-config-diary": "workspace:*",
    "tsconfig": "workspace:*",
    "typescript": "^5.1.3",
    "unified": "^10.1.2"
  }
}
