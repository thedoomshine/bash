{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Remix",
  "include": ["remix.env.d.ts", "**/*.ts", "**/*.tsx"],
  "extends": "./base.json",
  "compilerOptions": {
    "allowJs": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2019",
      "ES2020",
      "ES2020.Intl",
      "ES2021",
      "ESNext"
    ],
    "moduleResolution": "node",
    "noEmit": true,
    "resolveJsonModule": true,
    "strict": true,
    "target": "ES2021"
  }
}
