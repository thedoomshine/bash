{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local", ".env", ".env/local"],
  "globalEnv": ["NODE_ENV"],
  "pipeline": {
    "build": {
      "cache": true,
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "umd/**", "build/**", "api/**", "public/build/**", "storybook-static/**"]
    },
    "clean": {
      "cache": false,
      "outputs": []
    },
    "deploy": {
      "cache": true,
      "outputs": []
    },
    "dev": {
      "cache": false,
      "dependsOn": ["^build"],
      "persistent": true
    },
    "prettier": {
      "cache": false,
      "outputs": []
    },
    "eslint": {
      "cache": false,
      "dependsOn": [],
      "inputs": ["!supabase"],
      "outputs": []
    },
    "stylelint": {
      "cache": false,
      "inputs": ["!supabase"],
      "outputs": []
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"]
    },
    "typecheck": {
      "cache": false,
      "outputs": []
    },
    "prepare": {
      "cache": false,
      "outputs": ["style-engine/**"]
    }
  }
}
