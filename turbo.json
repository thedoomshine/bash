{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [".env", ".env/local"],
  "globalEnv": ["NODE_ENV"],
  "pipeline": {
    "build": {
      "cache": false,
      "dependsOn": ["^build"],
      "outputs": [
        "dist/**",
        "umd/**",
        "build/**",
        "api/**",
        "public/build/**",
        "storybook-static/**"
      ],
      "inputs": ["!_web", "!workshop"]
    },
    "clean": {
      "cache": false,
      "outputs": []
    },
    "deploy": {
      "cache": true,
      "outputs": []
    },
    "dev": {
      "cache": false,
      "dependsOn": ["^build"],
      "inputs": ["!_web"],
      "persistent": true
    },
    "prettier": {
      "cache": false,
      "outputs": []
    },
    "eslint": {
      "cache": false,
      "dependsOn": [],
      "inputs": ["!supabase", "!_web"],
      "outputs": []
    },
    "stylelint": {
      "cache": false,
      "inputs": ["!supabase", "!_web"],
      "outputs": []
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"]
    },
    "typecheck": {
      "cache": false,
      "outputs": ["topo"]
    },
    "prepare": {
      "cache": false
    },
    "codegen": {
      "cache": false,
      "dependsOn": ["^build"]
    },
    "topo": {
      "dependsOn": ["^topo"]
    }
  }
}
